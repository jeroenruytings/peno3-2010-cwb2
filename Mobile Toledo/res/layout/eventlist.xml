<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >
 <RelativeLayout android:id="@+id/titlebg"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="26px" android:layout_width="fill_parent"
	android:background="@drawable/titlegradient"
	android:visibility="gone">
  	<TextView android:id="@+id/titlebar" android:layout_width="wrap_content"
		android:gravity="center_vertical" 
		android:textColor="#ffffff" 
		android:layout_alignParentLeft="true"
		android:text="Title"
		android:layout_height="wrap_content" 
		android:layout_alignParentTop="true"
		android:layout_margin="2dip"
		android:textStyle="bold" />
	</RelativeLayout>
 <LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  style="@style/GenLayout">	
  	<ListView android:id="@+id/listevents"
                android:layout_width="fill_parent" android:layout_height="fill_parent" android:scrollbars="none">
                </ListView>
</LinearLayout>
</LinearLayout>
