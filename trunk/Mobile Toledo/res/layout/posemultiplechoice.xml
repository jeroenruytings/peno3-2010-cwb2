<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  	  <LinearLayout
	  	android:orientation = "vertical"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content">
	  		<TextView android:id="@+id/title" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/question" />
			<EditText android:id="@+id/mtitle"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
			<TextView android:id="@+id/answ1" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="Antwoord 1:" />
			<EditText android:id="@+id/mansw1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="2"/>
			<TextView android:id="@+id/answ2" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="Antwoord 2:" 
			android:visibility="gone"/>
			<EditText android:id="@+id/mansw2"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:visibility="gone"/>
			<TextView android:id="@+id/answ3" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="Antwoord 3:" 
			android:visibility="gone"/>
			<EditText android:id="@+id/mansw3"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:visibility="gone"/>
			<TextView android:id="@+id/answ4" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="Antwoord 4:"
			android:visibility="gone" />
			<EditText android:id="@+id/mansw4"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:visibility="gone"/>
			<TextView android:id="@+id/answ5" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="Antwoord 5:" 
			android:visibility="gone"/>
			<EditText android:id="@+id/mansw5"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:visibility="gone"/>
		</LinearLayout>
</LinearLayout>
