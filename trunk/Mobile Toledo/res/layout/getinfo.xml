<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  style="@style/GenLayout">
  
  <FrameLayout
  android:id="@+id/frame"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginRight="5dip">
  <LinearLayout
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
  android:id="@+id/locationname"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="@string/location"
   android:textStyle="bold"
  android:singleLine="true"
  android:ellipsize="end"
  android:textColor="#ffffff"
  android:layout_marginTop="20dip"
  android:layout_marginLeft="5dip"/> 
  
   <TextView
  android:id="@+id/adressetitle"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Adres:"
  android:textColor="#cccccc"
  android:layout_marginLeft="5dip"/> 
    <TextView
  android:id="@+id/adresse"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="@string/location"
  android:textColor="#cccccc"
  android:layout_marginLeft="5dip"/> 
  
      <TextView
  android:id="@+id/openinghourstitle"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Openingsuren: "
  android:layout_marginLeft="5dip"/> 
    <TextView
  android:id="@+id/openinghours"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="@string/location"
  android:textColor="#cccccc"
  android:layout_marginLeft="5dip"/> 
   
       <TextView
  android:id="@+id/telephonenrtitle"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Telefoonnummer: "
  android:textColor="#cccccc"
  android:layout_marginLeft="5dip"/>
    <TextView
  android:id="@+id/telephonenr"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="@string/location"
  android:textColor="#cccccc"
  android:layout_marginLeft="5dip"/> 
</LinearLayout>
  
  <ImageButton
  android:id="@+id/locationinfonavigate"
  android:src="@drawable/showroute_small"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="right"
  android:layout_marginLeft="5dip"/>
  </FrameLayout>  
	
	<FrameLayout
  android:id="@+id/frame0"
  android:layout_below="@id/frame"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginRight="5dip">
	<Gallery 
	xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/gallery"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:spacing="2dip"
    android:visibility="visible"/>
 </FrameLayout>
    
</RelativeLayout>