<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation = "vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  style="@style/MenuLayout">
  
 	<ImageView android:id="@+id/toledologo"
  	android:layout_marginTop="5px"
  	android:src="@drawable/toledo_logo"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content" 
  	android:scaleType="center"/>

	<LinearLayout
  	android:orientation = "vertical"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content">
  		<TextView android:id="@+id/username" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/username"
		style="@style/FontStyle1" />
		<EditText android:id="@+id/musername"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>
		<TextView android:id="@+id/password"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/password"
		style="@style/FontStyle1" />
		<EditText android:id="@+id/mpassword"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:password="true"/>
		<TextView android:id="@+id/confirmpassword"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/confirmpassword"
		style="@style/FontStyle1" />
		<EditText android:id="@+id/mconfirmpassword"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:password="true"/>
	</LinearLayout>
 	<FrameLayout
  	android:layout_width="match_parent"
  	android:layout_height="match_parent">
		<Button android:id="@+id/createuser"
	 	android:text="@string/createuser"
	  	android:layout_height="wrap_content"
	  	android:layout_width="wrap_content"
	  	android:layout_gravity="center"/>
	 </FrameLayout>
  	
</LinearLayout>
